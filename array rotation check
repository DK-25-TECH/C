#include<stdio.h>
#include<stdbool.h>
bool rotfx(int a[],int b[],int n)
{
    for(int i=0;i<n;i++)
    {
        bool x=true;
        for(int j=0;j<n;j++)
        {
            if(b[j]!=a[(j+i)%n])
            {
                x=false;
                break;
            }
        }
        if(x) return true;
    }
    return false;
}
int main()
{
   int n;
   scanf("%d",&n);
   int a[n];
   int b[n];
   for(int i=0;i<n;i++)
   {
       scanf("%d",&a[i]);
   }
   for(int i=0;i<n;i++)
   {
       scanf("%d",&b[i]);
   }
   rotfx(a,b,n);
   if( rotfx(a,b,n))
   {
       printf("true");
   }
   else
   {
       printf("false");
   }
}
