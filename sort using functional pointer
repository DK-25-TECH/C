#include<stdio.h>
int asc(int a,int b)
{
    return a>b;
}
int dsc(int a,int b)
{
    return a<b;
}
void sort(int *a,int n,int (*fp)(int,int))
{
    for(int i=0;i<n-1;i++)
    {
        for(int j=i;j<n;j++)
        {
            if(fp(a[i],a[j]))
            {
                int x=a[i];
                a[i]=a[j];
                a[j]=x;
            }
        }
    }
}
int main()
{
    int n;
    scanf("%d",&n);
    int a[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("ascending order\n");
    sort(a,n,asc);
    for(int i=0;i<n;i++)
    {
        printf("%d ",a[i]);
    }
    printf("\n");
    printf("descending order\n");
    sort(a,n,dsc);
    for(int i=0;i<n;i++)
    {
        printf("%d ",a[i]);
    }
}








