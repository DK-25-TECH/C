
#include <stdio.h>
#include<string.h>
int main()
{
   char c[100];
   char x[100];
   fgets(c,sizeof(c),stdin);
   int n=strlen(c)-1;
   if(c[n]=='\n')
   {
       c[n]='\0';
           n--;
   }
   int j=0;
   for(int i=n;i>=0;i--)
   {
           x[j++]=c[i];
   }
   x[j]='\0';
       printf("%s",x);
  
    return 0;
}
