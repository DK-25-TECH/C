#include<stdio.h>
#include<string.h>
void main()
{
    char c[20];
    fgets(c,sizeof(c),stdin);
    int n=strlen(c);
    if(c[n-1]=='\n')
    {
        c[n-1]='\0';
    }
   int x[256]={0};
   for(int i=0;i<n;i++)
   {
       x[(unsigned char)c[i]]++;
   }
   int oc=0,len=0;
   for(int i=0;i<256;i++)
   {
       if(x[i]%2==0)
       {
           len+=x[i];
       }
       else
       {
          len+=x[i]-1;
          oc=1;
       }
   }
   if(oc)
   {
       len+=1;
   }
   
   printf("%d",len) ;
}
