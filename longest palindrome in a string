#include<stdio.h>
#include<string.h>
int check(char c[],int l,int r)
{
    while(l<r)
    {
        if(c[l]!=c[r])
        {
            return 0;
        }
        l++;
        r--;
    }
    return 1;
}
void longpal(char c[],int n,int (*fp)(char[],int,int))
{
    int max=0,st=0;
    for(int i=0;i<n;i++)
    {
        for(int j=i;j<n;j++)
        {
            if(fp(c,i,j) && ((j-i+1)>max))
            {
                st=i;
                max=j-i+1;
            }
        }
    }
    for(int i=st;i<st+max;i++)
    {
        printf("%c",c[i]);
    }
    printf("\n");
    printf("%d",max);
}
void main()
{
    char c[20];
    fgets(c,sizeof(c),stdin);
    int n=strlen(c);
    if(c[n-1]=='\n')
    {
        c[n-1]='\0';
    }
   longpal(c,n,check);
}
