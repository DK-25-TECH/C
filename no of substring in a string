#include<stdio.h>
#include<string.h>
#include<ctype.h>
int nosubstr(char *a,char *b,int n,int n1)
{
    int x=0;
    for(int i=0;i<=n-n1;i++)
    {
        int j=0;
        for(j=0;j<n1;j++)
        {
            if(a[i+j]!=b[j]) break;
        }
        if(j==n1)
        {
            x++;
        }
    }
    return x;
}
int main() {
    char a[100];
    fgets(a,sizeof(a),stdin);
    int n=strlen(a);
    if(a[n-1]=='\n')
    {
        a[n-1]='\0';
        n--;
    }
    char b[100];
    fgets(b,sizeof(b),stdin);
    int n1=strlen(b);
    if(b[n1-1]=='\n')
    {
        b[n1-1]='\0';
        n1--;
    }
    int x=nosubstr(a,b,n,n1);
    
        printf("%d",x);
   
    
}
