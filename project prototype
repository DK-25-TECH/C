#include<stdio.h>
#include<string.h>
#include<stdlib.h>
typedef struct product{
    int productId;
    char productName[20];
    float price;
    int quantity;
}p;
void addProduct(p x[],int n)
{
    for(int i=0;i<n;i++)
    {
        scanf("%d %s %f %d",&x[i].productId,x[i].productName,&x[i].price,&x[i].quantity);
    }
}
p* addnewProduct(p *x,int *n)
{
    int nop;
    scanf("%d",&nop);
    x=realloc(x,(*n+nop)*sizeof(p));
    for(int i=*n;i<*n+nop;i++)
    {
        scanf("%d %s %f %d",&x[i].productId,x[i].productName,&x[i].price,&x[i].quantity);
    }
    *n+=nop;
    return x;
}
void searchproductById(p x[],int n)
{
    int findId;
    scanf("%d",&findId);
    int z=0;
    for(int i=0;i<n;i++)
    {
        if(x[i].productId==findId)
        {
            z=1;
            printf("%s %f %d",x[i].productName,x[i].price,x[i].quantity);
            break;
        }
    }
    if(!z)
    {
        printf("NOT FOUND");
    }
}
void searchproductByName(p x[],int n)
{
    char c[200];
    int ch;
    while ((ch = getchar()) != '\n' && ch != EOF);  
    fgets(c, sizeof(c), stdin);
    int len = strlen(c);
    if (len > 0 && c[len - 1] == '\n')
        c[len - 1] = '\0';
    int z=0;
    for(int i=0;i<n;i++)
    {
        if(strcmp(c,x[i].productName)==0)
        {
            z=1;
            printf("%d %f %d",x[i].productId,x[i].price,x[i].quantity);
            break;
        }
    }
    if(!z)
    {
        printf("NOT FOUND");
    }
}
void displayProduct(p x[],int n)
{
    for(int i=0;i<n;i++)
    {
        printf("%d %s %f %d\n",x[i].productId,x[i].productName,x[i].price,x[i].quantity);
    }
}
int main()
{
    int n;
    scanf("%d",&n);
    p *m=malloc(n*(sizeof(p)));
    int choice;
    do{
        
    printf("enter a choice");
    scanf("%d",&choice);
    
    switch(choice)
    {
        case 1:
          addProduct(m,n);
          break;
          case 2:
            m=addnewProduct(m,&n);
            break;
            case 3:
              searchproductByName(m,n);
              break;
              case 4:
                searchproductById(m,n);
                break;
                  case 5:
                    displayProduct(m,n);
                    break;
                    default:
                    break;
    }
    }while(choice<=5);
    
    
}
